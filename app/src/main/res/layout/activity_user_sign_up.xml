<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    tools:context="com.genesis.ksrtcbusfinder.activity.UserSignUpActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:text="User Sign Up....."
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nameextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        android:text="Username"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/usernameSignEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nameextView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameextView"
        android:layout_below="@+id/usernameSignEditText"
        android:text="Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nameSignEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/nameSignEditText"
        android:text="Password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passwordSignUpEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/nameSignEditText"
        android:layout_below="@+id/textView9"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/phoneEditText"
        android:layout_below="@+id/phoneEditText"
        android:layout_marginTop="21dp"
        android:background="@drawable/redroundbutton"
        android:text="Sign Up"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/passwordSignUpEditText"
        android:text="Phone Number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="phone" />

</RelativeLayout>
