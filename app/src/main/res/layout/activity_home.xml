<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    tools:context="com.genesis.ksrtcbusfinder.activity.HomeActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="31dp"
        android:text="Search Your Bus"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sourceSpinner"
        android:layout_below="@+id/textView10"
        android:layout_marginStart="14dp"
        android:layout_marginTop="33dp"
        android:text="Source"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sourceSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:background="@drawable/whiteroundtext" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/sourceSpinner"
        android:layout_marginTop="22dp"
        android:text="Destination"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/destinationSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/sourceSpinner"
        android:layout_below="@+id/textView12"
        android:background="@drawable/whiteroundtext" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/destinationSpinner"
        android:layout_marginTop="24dp"
        android:text="Bus Type"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/busTypeSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/destinationSpinner"
        android:layout_below="@+id/textView13"
        android:background="@drawable/whiteroundtext" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/busTypeSpinner"
        android:layout_below="@+id/busTypeSpinner"
        android:layout_marginTop="42dp"
        android:background="@drawable/redroundbutton"
        android:text="Search"
        android:textSize="18sp" />
</RelativeLayout>
